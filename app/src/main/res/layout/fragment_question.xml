<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.exomatik.diagnosapenyakit.ui.questioner.QuestionerFragment">
    <data>
        <variable
            name="viewModel"
            type="com.exomatik.diagnosapenyakit.ui.questioner.QuestionerViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue6"
        app:snackbar="@{viewModel.message}"
        >

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/logo"
            android:layout_width="@dimen/_170"
            android:layout_height="@dimen/_170"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_40"
            android:layout_marginBottom="@dimen/h2"
            android:background="@android:color/transparent"
            android:padding="@dimen/h2"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textBalligh"
            style="@style/textStandardWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/h4"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/app_name"
            android:textColor="@color/gray3"
            android:textAllCaps="false"
            android:textSize="30sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/viewPengenalan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textBalligh"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/h2"
            android:background="@color/white"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/h2"
            app:cardElevation="@dimen/h2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textBalligh"
                android:layout_margin="10dp"
                android:padding="10dp"
                >
                <com.exomatik.diagnosapenyakit.services.seekBar.BubbleSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar"
                    app:bsb_min="1"
                    app:bsb_max="10"
                    app:bsb_progress="1"
                    app:bsb_section_count="9"
                    app:bsb_track_color="@color/putihGelap1"
                    app:bsb_section_text_color="@color/colorPrimary"
                    app:bsb_bubble_color="@color/colorPrimary"
                    app:bsb_section_text_size="@dimen/text_h4"
                    app:bsb_thumb_text_size="@dimen/text_h4"
                    app:bsb_bubble_text_size="@dimen/text_h4"
                    app:bsb_show_section_text="true"
                    app:bsb_show_section_mark="true"
                    app:bsb_auto_adjust_section_mark="true"
                    app:bsb_section_text_position="below_section_mark"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textSoal"
                    style="@style/textStandardWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seekBar"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/gray3"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_h5"
                    android:layout_marginTop="@dimen/h5"
                    android:text="@={viewModel.soal}"
                    />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textSoal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rgAnswer"
                    >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/iya"
                        android:id="@+id/rb1"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/kadang_kadang"
                        android:id="@+id/rb2"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/tidak"
                        android:id="@+id/rb3"
                        />
                </RadioGroup>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.buttonNext}"
                    android:layout_below="@+id/rgAnswer"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btnDiagnosa"
                    style="@style/buttonStandardBlue"
                    android:padding="@dimen/h4"
                    android:onClick="@{()-> viewModel.gantiSoal()}"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cek"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btnCek"
                    android:visibility="gone"
                    style="@style/buttonStandardBlue"
                    android:padding="@dimen/h4"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>